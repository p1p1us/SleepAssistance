<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdgeLength="0.0dip"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.devdroid.sleepassistant.activity.SleepSupportActivity"
    tools:showIn="@layout/activity_restriction"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.devdroid.sleepassistant.activity.HelpQuestionDetailActivity">

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="选择时间"
            android:textColor="@color/white"
            android:textSize="22dp" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_calendar_card_next_text" />

        <TextView
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/question_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="选择时间"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </LinearLayout>
</ScrollView>