<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/all_layout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.devdroid.sleepassistant.activity.UserCenterActivity">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:orientation="horizontal"
        style="@style/SettingItemLinearLayout">
        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="头像"/>
        <ImageView
            android:id="@+id/head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/right_arrow1"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/user_icon_default"/>
        <ImageView
            android:id="@+id/right_arrow1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_item_arrow"/>
    </RelativeLayout>
    <TextView
        style="@style/UserCenterItemDivide"/>
    <RelativeLayout
        android:id="@+id/rl_name"
        android:orientation="horizontal"
        style="@style/SettingItemLinearLayout">
        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="昵称"/>
        <TextView
            android:id="@+id/txt_name"
            android:textColor="@color/gray"
            android:text="p1p1us"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/right_arrow2"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/right_arrow2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_item_arrow"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tmpp"
        style="@style/UserCenterItemDivide"/>
    <RelativeLayout
        android:id="@+id/rl_sex"
        android:orientation="horizontal"
        style="@style/SettingItemLinearLayout">
        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="性别"/>
        <TextView
            android:id="@+id/txt_sex"
            android:textColor="@color/gray"
            android:text="男"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/right_arrow3"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/right_arrow3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_item_arrow"/>
    </RelativeLayout>
    <TextView
        style="@style/UserCenterItemDivide"/>
    <RelativeLayout
        android:id="@+id/rl_age"
        android:orientation="horizontal"
        style="@style/SettingItemLinearLayout">
        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="年龄"/>
        <TextView
            android:id="@+id/txt_age"
            android:textColor="@color/gray"
            android:text="23"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/right_arrow4"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/right_arrow4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_item_arrow"/>
    </RelativeLayout>
    <TextView
        style="@style/UserCenterItemDivide"/>
    <RelativeLayout
        android:id="@+id/rl_height"
        android:orientation="horizontal"
        style="@style/SettingItemLinearLayout">
        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="身高"/>
        <TextView
            android:id="@+id/txt_height"
            android:textColor="@color/gray"
            android:text="175"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/danwei2"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/danwei2"
            android:textColor="@color/gray"
            android:text="cm"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/right_arrow5"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/right_arrow5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_item_arrow"/>
    </RelativeLayout>
    <TextView
        style="@style/UserCenterItemDivide"/>
    <RelativeLayout
        android:id="@+id/rl_weight"
        android:orientation="horizontal"
        style="@style/SettingItemLinearLayout">
        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="体重"/>
        <TextView
            android:id="@+id/txt_weight"
            android:textColor="@color/gray"
            android:text="65"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/danwei1"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/danwei1"
            android:textColor="@color/gray"
            android:text="kg"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/right_arrow6"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/right_arrow6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_item_arrow"/>
    </RelativeLayout>
    <TextView
        style="@style/UserCenterItemDivide"/>
    <RelativeLayout
        android:id="@+id/rl_save"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_height="42dp">

        <Button
            android:id="@+id/bt_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/blue"
            android:text="保 存"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>
</LinearLayout>